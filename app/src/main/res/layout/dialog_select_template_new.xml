<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_bottom_10dp"
    android:background="#80deea"
    android:orientation="vertical" >



    <LinearLayout
        android:id="@+id/layout_take_picture_custom_dialog_llSourceType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_10dp"
        android:layout_toEndOf="@+id/dialog_delete_record_tvCancel"
        android:layout_weight="0.5"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imgOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:background="@drawable/one" />

            <ImageView
                android:id="@+id/imgTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.33"
                android:background="@drawable/two" />

            <ImageView
                android:id="@+id/imgThree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="0.33"
                android:background="@drawable/three" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.50"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgFour"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/four" />

                <ImageView
                    android:id="@+id/imgFive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/five" />

                <ImageView
                    android:id="@+id/imgSix"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/six" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_delete_record_tvCancel"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_margin="10dp"
        android:background="@drawable/style_white_btn"
        android:gravity="center"
        android:padding="@dimen/padding_5"
        android:text="Cancel"
        android:textColor="@color/maincolor"
        android:textSize="@dimen/font_26sp"
        android:textStyle="bold" />

</LinearLayout>